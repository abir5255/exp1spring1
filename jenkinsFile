pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage("Clone repo") {
            steps {
                script {
                    def repoDir = 'tp1spring'
                    if (fileExists(repoDir)) {
                        echo "Directory ${repoDir} exists. Deleting it..."
                        deleteDir()
                    }
                }
                bat "git clone https://github.com/abir5255/exp1spring1.git tp1spring"
            }
        }
        stage("Generate backend image") {
            steps {
                dir("tp1spring") {
                    bat "mvn clean install"
                    bat "docker build -t docexp-spring ."
                }
            }
        }
        stage("Run docker compose") {
            steps {
                dir("tp1spring") {
                    bat "docker-compose up -d"
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
