pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage("Clean up") {
            steps { 
                deleteDir()
            }
        }
        stage("Clone repo") {
            steps {
                script {
                    def gitCloneStatus = sh script: "git clone https://github.com/abir5255/exp1spring1.git", returnStatus: true
                    if (gitCloneStatus != 0) {
                        echo "Erreur lors du clonage du dépôt Git"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }

        stage("Run docker compose") {
            steps {
                dir("exp1spring1") {
                    sh "docker-compose up -d"
                }
            }
        }
    }
}
