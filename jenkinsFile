pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage("Clean up") {
            steps { 
                deleteDir()
            }
        }
        stage("Clone repo") {
            steps {
                   sh "git clone https://github.com/abir5255/exp1spring1.git"
                }
            }
        stage("Run docker compose") {
            steps {
                script {
                    dir("exp1spring1") {
                        sh "docker-compose up -d" 
                    }
                }
            }
        }
    }
}
