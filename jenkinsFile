pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage("Clean up") {
            steps { 
                deleteDir()
            }
        }
        stage("Clone repo") {
            steps {
                script {
                    git branch: 'master', credentialsId: 'your_credentials_id', url: 'https://github.com/abir5255/exp1spring1.git'
                }
            }
        }
        stage("Generate backend image") {
            steps {
                script {
                    dir("exp1-spring1") {
                        sh "mvn clean install"
                        sh "docker build -t tpspring.spring ."
                    }
                }
            }
        }
        stage("Run docker compose") {
            steps {
                script {
                    dir("exp1-spring1") {
                        sh "docker-compose up -d" // Assurez-vous d'utiliser la commande docker-compose correcte
                    }
                }
            }
        }
    }
}
