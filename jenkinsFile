pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage("Clean up") {
            steps { 
                deleteDir()
            }
        }
       stage("Clone repo") {
            steps {
                script {
                    try {
                        sh "git clone https://github.com/abir5255/exp1spring1.git"
                    } catch (Exception e) {
                        echo "Erreur lors du clonage du dépôt Git : ${e.message}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }

       stage("Run docker compose") {
            steps {
                dir("exp1spring1") {
                    // Remplacez le chemin ci-dessous par le chemin réel de docker-compose.exe sur votre système
                    bat '"C:\\Program Files\\Docker\\Docker\\resources\\bin\\docker-compose.exe" up -d'
                }
            }
        }
    }
}
